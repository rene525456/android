                    android:layout_width="194dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="@dimen/space16"
                    android:src="@drawable/punzara"
                    tools:layout_editor_absoluteX="42dp"
                    tools:layout_editor_absoluteY="29dp" />

                <TextView
                    android:id="@+id/btnParroquias"
                    style="@style/SemiBold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Cascada Humuto”"
                    android:textAlignment="center"
                    android:textColor="@color/colorTextDark"
                    android:textSize="@dimen/h3" />

                <RatingBar
                    android:id="@+id/ratingBar"
                    style="@style/RatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:rating="3.5"
                    android:textAlignment="center" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="201dp"
                android:layout_height="552dp"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/lblrutaAlfareriaBarrioCera"
                    android:layout_width="194dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="@dimen/space16"
                    android:src="@drawable/taquil"
                    tools:layout_editor_absoluteX="42dp"
                    tools:layout_editor_absoluteY="29dp" />

                <TextView
                    android:id="@+id/btnParroquias"
                    style="@style/SemiBold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Alfarería El Barrio Cera "
                    android:textAlignment="center"
                    android:textColor="@color/colorTextDark"
                    android:textSize="@dimen/h3" />

                <RatingBar
                    android:id="@+id/ratingBar"
                    style="@style/RatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:rating="3.5"
                    android:textAlignment="center" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/lblrutaCentroInterpretacionTuristica"
                    android:layout_width="194dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="@dimen/space16"
                    android:src="@drawable/taquil"
                    tools:layout_editor_absoluteX="42dp"
                    tools:layout_editor_absoluteY="29dp" />

                <TextView
                    android:id="@+id/btnParroquias"
                    style="@style/SemiBold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Centro de Interpretación Turística"
                    android:textAlignment="center"
                    android:textColor="@color/colorTextDark"
                    android:textSize="@dimen/h3" />

                <RatingBar
                    android:id="@+id/ratingBar"
