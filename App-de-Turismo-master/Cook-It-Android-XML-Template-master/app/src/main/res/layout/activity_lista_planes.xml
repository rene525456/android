<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/fondo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <Button
        android:id="@+id/btnHome"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:background="@drawable/home"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="188dp"
                android:layout_height="230dp"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/gastronomia"
                    android:layout_width="194dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="@dimen/space16"
                    android:src="@drawable/repe"
                    tools:layout_editor_absoluteX="42dp"
                    tools:layout_editor_absoluteY="29dp" />

                <TextView
                    android:id="@+id/btnParroquias"
                    style="@style/SemiBold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Gastronomia"
                    android:textAlignment="center"
                    android:textColor="@color/colorTextDark"
                    android:textSize="@dimen/h3" />


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/agenciadeviajes"
                    android:layout_width="194dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="@dimen/space16"
                    android:src="@drawable/aratinga"
                    tools:layout_editor_absoluteX="42dp"
                    tools:layout_editor_absoluteY="29dp" />

                <TextView
                    android:id="@+id/btnParroquias"
                    style="@style/SemiBold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Agencias de Viaje"
                    android:textAlignment="center"
                    android:textColor="@color/colorTextDark"
                    android:textSize="@dimen/h3" />



            </LinearLayout>


            <LinearLayout
                android:layout_width="188dp"
                android:layout_height="230dp"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/transporte"
                    android:layout_width="194dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="@dimen/space16"
                    android:src="@drawable/transporte"
                    tools:layout_editor_absoluteX="42dp"
                    tools:layout_editor_absoluteY="29dp" />

                <TextView
                    android:id="@+id/btnParroquias"
                    style="@style/SemiBold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Transporte"
                    android:textAlignment="center"
                    android:textColor="@color/colorTextDark"
                    android:textSize="@dimen/h3" />


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/alojamiento"
                    android:layout_width="194dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="@dimen/space16"
                    android:src="@drawable/pucara"
                    tools:layout_editor_absoluteX="42dp"
                    tools:layout_editor_absoluteY="29dp" />

                <TextView
                    android:id="@+id/btnParroquias"
                    style="@style/SemiBold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Alojamiento"
                    android:textAlignment="center"
                    android:textColor="@color/colorTextDark"
                    android:textSize="@dimen/h3" />


            </LinearLayout>




        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="186dp"
        android:layout_height="442dp"
        android:orientation="vertical">

    </LinearLayout>
</LinearLayout>
