<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/fondo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <Button
        android:id="@+id/btnHome"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:background="@drawable/home"
         />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <LinearLayout
                android:layout_width="188dp"
                android:layout_height="1300dp"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/btnMirador"
                    android:layout_width="194dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="@dimen/space16"
                    android:src="@drawable/taquil"
                    tools:layout_editor_absoluteX="42dp"
                    tools:layout_editor_absoluteY="29dp" />

                <TextView
                    android:id="@+id/btnParroquias"
                    style="@style/SemiBold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="TAQUIL"
                    android:textAlignment="center"
                    android:textColor="@color/colorTextDark"
                    android:textSize="@dimen/h3" />

                <RatingBar
                    android:id="@+id/ratingBar"
                    style="@style/RatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:rating="3.5"
                    android:textAlignment="center" />


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/btnChuquiribamba"
                    android:layout_width="194dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="@dimen/space16"
                    android:src="@drawable/chuquiribambasitio"
                    tools:layout_editor_absoluteX="42dp"
                    tools:layout_editor_absoluteY="29dp" />

                <TextView
                    android:id="@+id/btnChuquiribambaa"
                    style="@style/SemiBold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="CHUQUIRIBAMBA"
                    android:textAlignment="center"
                    android:textColor="@color/colorTextDark"
                    android:textSize="@dimen/h3" />

                <RatingBar
                    android:id="@+id/ratingBar"
                    style="@style/RatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:rating="3.5"
                    android:textAlignment="center" />


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/btnElCisne"
                    android:layout_width="194dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="@dimen/space16"
                    android:src="@drawable/cisnesitio"
                    tools:layout_editor_absoluteX="42dp"
                    tools:layout_editor_absoluteY="29dp" />

                <TextView
                    android:id="@+id/btnElCisnee"
                    style="@style/SemiBold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="EL CISNE"
                    android:textAlignment="center"
                    android:textColor="@color/colorTextDark"
                    android:textSize="@dimen/h3" />

                <RatingBar
                    android:id="@+id/ratingBarElCisne"
                    style="@style/RatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:rating="3.5"
                    android:textAlignment="center" />












            </LinearLayout>


            <LinearLayout
                android:layout_width="188dp"
                android:layout_height="1200dp"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/btnChantacoo"
                    android:layout_width="194dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="@dimen/space16"
                    android:src="@drawable/chantacositio"
                    tools:layout_editor_absoluteX="42dp"
                    tools:layout_editor_absoluteY="29dp" />

                <TextView
                    android:id="@+id/btnChantaco"
                    style="@style/SemiBold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="CHANTACO"
                    android:textAlignment="center"
                    android:textColor="@color/colorTextDark"
                    android:textSize="@dimen/h3" />

                <RatingBar
                    android:id="@+id/ratingBar"
                    style="@style/RatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:rating="3.5"
                    android:textAlignment="center" />


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/btnGualel"
                    android:layout_width="194dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="@dimen/space16"
                    android:src="@drawable/gualel"
                    tools:layout_editor_absoluteX="42dp"
                    tools:layout_editor_absoluteY="29dp" />

                <TextView
                    android:id="@+id/btnGualell"
                    style="@style/SemiBold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="GUALEL"
                    android:textAlignment="center"
                    android:textColor="@color/colorTextDark"
                    android:textSize="@dimen/h3" />

                <RatingBar
                    android:id="@+id/ratingBarGualel"
                    style="@style/RatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:rating="3.5"
                    android:textAlignment="center" />

              </LinearLayout>









        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="186dp"
        android:layout_height="442dp"
        android:orientation="vertical">

    </LinearLayout>
</LinearLayout>
